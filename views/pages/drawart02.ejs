<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
    <body>
        <div class="container">
            <h1>Computer Art - Gravity Dust</h1>
            <%- include('../partials/canvas') %>
            <%- include('../partials/buttons-canvas') %>
            <div class="mb-3 row">
                <div class="col">
                    <label>Simulation speed 100-2000</label>
                    <span id="simulation-speed-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="100" max="2000" step="50" id="simulation-speed">
                </div>
                <div class="col">
                    <label>Number of parts 10-500</label>
                    <span id="num-parts-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="50" max="500" step="50" id="num-parts">
                </div> 
            </div> 
            <div class="mb-3 row">
                <div class="col">
                    <label>Part size 1-10</label>
                    <span id="part-size-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="1" max="10" step="1" id="part-size">
                </div>
                <div class="col">
                    <label>Impact factor</label>
                    <span id="impact-factor-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="0.1" max="0.9" step="0.1" id="impact-factor">
                </div>
            </div> 
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="clear-trace">
                <label class="form-check-label" for="clear-trace">Clear trace</label>    
            </div>
            <%- include('../partials/buttons-params') %>
        </div>
        <script src="scripts/bootstrap.min.js"></script>
        <script src="scripts/drawart02.js"></script>
    </body>
</html>