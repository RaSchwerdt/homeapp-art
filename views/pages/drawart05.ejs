<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
    <body>
        <div class="container">
            <h1>Computer Art - Trace Push</h1>
            <%- include('../partials/canvas') %>
            <%- include('../partials/buttons-canvas') %>
            <div class="mb-3 row">
                <div class="col">
                    <label>Simulation speed 5-1000</label>
                    <span id="simulation-speed-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="5" max="1000" step="5" id="simulation-speed">
                </div>
                <div class="col">
                    <label>Push factor 0.5-1.5</label>
                    <span id="push-factor-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="0.5" max="1.5" step="0.1" id="push-factor">
                </div> 
            </div> 
            <div class="mb-3 row">
                <div class="col">
                    <label>Number of balls 5-50</label>
                    <span id="num-balls-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="5" max="50" step="5" id="num-balls">
                </div> 
                <div class="col">
                    <label>Ball minimum size 1-10</label>
                    <span id="min-size-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="1" max="10" step="1" id="min-size">
                </div> 
                <div class="col">
                    <label>Ball maximum size 10-30</label>
                    <span id="max-size-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="10" max="30" step="1" id="max-size">
                </div> 
            </div> 
            <div class="mb-3 row">
                <div class="col">
                    <label>Gravity factor 5-20</label>
                    <span id="gravity-factor-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="5" max="20" step="1" id="gravity-factor">
                </div>
                <div class="col">
                    <label>Ellipse factor 1.0-2.0</label>
                    <span id="ellipse-factor-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="1.0" max="2.0" step="0.1" id="ellipse-factor">
                </div>
            </div>
                <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="clear-trace">
                <label class="form-check-label" for="clear-trace">Clear trace</label>    
            </div>
            <%- include('../partials/buttons-params') %>
        </div>       
        <script src="scripts/bootstrap.min.js"></script>
        <script src="scripts/drawart05.js"></script>
    </body>
</html>