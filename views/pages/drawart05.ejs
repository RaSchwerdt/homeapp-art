<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
    <body>
        <div class="container">
            <h1>Computer Art - Trace Push</h1>
            <%- include('../partials/canvas') %>
            <%- include('../partials/buttons-canvas') %>
            <div class="mb-3 row">
                <div class="col">
                    <label>Simulation speed 5-1000</label>
                    <span id="simulation-speed-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="5" max="1000" step="5" id="simulation-speed">
                </div>
                <div class="col">
                    <label>Push factor 0.5-1.5</label>
                    <span id="push-factor-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="0.5" max="1.5" step="0.1" id="push-factor">
                </div> 
                <div class="col">
                    <label>Ball speed 0-10</label>
                    <span id="ball-speed-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="0" max="10" step="2" id="ball-speed">
                </div> 
            </div> 
            <div class="mb-3 row">
                <div class="col">
                    <label>Number of balls 1-50</label>
                    <span id="num-balls-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="1" max="50" step="1" id="num-balls">
                </div> 
                <div class="col">
                    <label>Ball minimum size 1-10</label>
                    <span id="min-size-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="1" max="10" step="1" id="min-size">
                </div> 
                <div class="col">
                    <label>Ball maximum size 10-30</label>
                    <span id="max-size-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="10" max="30" step="1" id="max-size">
                </div> 
            </div> 
            <div class="mb-3 row">
                <div class="col">
                    <label>Gravity factor 1-20</label>
                    <span id="gravity-factor-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="1" max="20" step="1" id="gravity-factor">
                </div>
                <div class="col">
                    <label>Ellipse factor 1.0-2.0</label>
                    <span id="ellipse-factor-value" style="color:red;"></span>
                    <input type="range" class="form-range" min="1.0" max="2.0" step="0.1" id="ellipse-factor">
                </div>
                <div class="mb-3 row">
                    <div id="list-gravity-fields" class="list-group">
                    </div>
                </div>
    
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="clear-trace">
                <label class="form-check-label" for="clear-trace">Clear trace</label>    
            </div>
            <%- include('../partials/buttons-params') %>
            <button id="modal-remove" type="button" class="btn btn-primary">Remove Gravity Field</button>
            <button id="modal-button" type="button" class="btn btn-primary" data-toggle="modal" data-target="#gravity-modal">Add Gravity Field</button>
            <div class="modal" tabindex="-1" role="dialog" id="gravity-modal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add Gravity Field</h5>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3 row">
                                <div class="col">
                                    <label>Distance from center 0-220</label>
                                    <span id="modal-distance-value" style="color:red;"></span>
                                    <input type="range" class="form-range" min="0" max="220" step="5" id="modal-distance">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col">
                                    <label>Start angle 0-350</label>
                                    <span id="modal-start-value" style="color:red;"></span>
                                    <input type="range" class="form-range" min="0" max="350" step="10" id="modal-start">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col">
                                    <label>Size 5-30</label>
                                    <span id="modal-size-value" style="color:red;"></span>
                                    <input type="range" class="form-range" min="5" max="30" step="1" id="modal-size">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col">
                                    <label>Angle speed 0-10</label>
                                    <span id="modal-speed-value" style="color:red;"></span>
                                    <input type="range" class="form-range" min="0" max="10" step="1" id="modal-speed">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="modal-save" type="button" class="btn btn-primary">Save changes</button>
                        <button id="modal-close" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>       
        <script src="scripts/bootstrap.min.js"></script>
        <script src="scripts/drawart05.js"></script>
    </body>
</html>